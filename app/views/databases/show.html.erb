<p id="notice"><%= notice %></p>

<table class="table table-striped table-bordered table-condensed">
    <thead>
  <tr>
    <th>Name</th>
    <th>Host</th>
    <th>Primary dba</th>
    <th>Secondary dba</th>
    <th>Port</th>
    <th>Server</th>
    <th>DRmethod</th>
    <th>Dbcreated on</th>
    <th>Version</th>
    <th>Unique hash</th>
    <th>Server Description</th>
  </tr>
</thead>
<tbody>
  <tr>
    <td><%= link_to @database.name, @database %></td>
    <td><%= link_to Host.find_by_id(@database.host_id).name, Host.find_by_id(@database.host_id) %></td>
    <td><%= link_to Dbadmin.find_by_id(@database.primary_dba_id).name, Dbadmin.find_by_id(@database.primary_dba_id) %></td>
    <td><%= link_to Dbadmin.find_by_id(@database.secondary_dba_id).name, Dbadmin.find_by_id(@database.secondary_dba_id) %></td>
    <td><%= @database.port %></td>
    <td><%= @database.server_id %></td>
    <td><%= @database.drmethod %></td>
    <td><%= @database.dbcreated_on.to_date %></td>
    <td><%= @database.version %></td>
    <td><%= @database.unique_hash %></td>
    <td><%= @database.server_desc %></td>
  </tr>
</tbody>
</table>

<% if @schemas %>  
  <p><b>Schemas</b></p>
  <table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Application</th>
    <th></th>
  </tr>

<% @schemas.each do |schema| %>
  <tr>
    <td><%= link_to schema.name, schema %></td>
    <td><%= schema.size %></td>
    <td><%= link_to Application.find_by_id(schema.application_id).name, Application.find_by_id(schema.application_id) %></td>
  </tr>
<% end %>
</table>  
<% end %>

<%= link_to 'Edit', edit_database_path(@database), :class => 'btn' %> 
<%= link_to 'Back', databases_path, :class => 'btn' %>
