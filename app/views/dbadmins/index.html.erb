<h1>Database Admins</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Netid</th>
        <th>Primary phone</th>
        <th>Secondary phone</th>
        <th>Email</th>
        <th>Location</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

<% @dbadmins.each do |dbadmin| %>
<tbody>
  <tr>
    <td><%= link_to dbadmin.name, dbadmin %></td>
    <td><%= dbadmin.netid %></td>
    <td><%= dbadmin.priphone %></td>
    <td><%= dbadmin.secphone %></td>
    <td><%= dbadmin.email %></td>
    <td><%= dbadmin.location %></td>
    <td type="button"><%= link_to 'Edit', edit_dbadmin_path(dbadmin), :class => "btn btn-mini" %></td>
    <td type="button"><%= link_to 'Delete', dbadmin, :class => "btn btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'New Database Admin', new_dbadmin_path, :class => "btn" %>

