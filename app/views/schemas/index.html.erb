<h1>Schemas</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Application</th>
    <th>Database</th>
    <th>Edit</th>
    <th>Delete</th>
    
  </tr>

<% @schemas.each do |schema| %>
  <tr>
    <td><%= link_to schema.name, schema %></td>
    <td><%= schema.size %></td>
    <td><%= link_to Application.find_by_id(schema.application_id).name, Application.find_by_id(schema.application_id) %></td>
    <td><%= link_to Database.find_by_id(schema.database_id).name , Database.find_by_id(schema.database_id) %></td>
    <td type="button"><%= link_to 'Edit', edit_schema_path(schema), :class => "btn btn-mini" %></td>
    <td type="button"><%= link_to 'Delete', schema, :class => "btn btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Schema', new_schema_path, :class => "btn" %>
