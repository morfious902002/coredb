<h1>System Admins</h1>

<table class="table table-striped table-bordered table-condensed">
    <thead>
  <tr>
    <th>Name</th>
    <th>Netid</th>
    <th>Primary Phone</th>
    <th>Seconday Phone</th>
    <th>Email</th>
    <th>Location</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>

<% @systemadmins.each do |systemadmin| %>
<tbody>
  <tr>
    <td><%= link_to systemadmin.name, systemadmin %></td>
    <td><%= systemadmin.netid %></td>
    <td><%= systemadmin.priphone %></td>
    <td><%= systemadmin.secphone %></td>
    <td><%= systemadmin.email %></td>
    <td><%= systemadmin.location %></td>
    <td type="button"><%= link_to 'Edit', edit_systemadmin_path(systemadmin), :class => "btn btn-mini" %></td>
    <td type="button"><%= link_to 'Delete', systemadmin, :class => "btn btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
</tbody>
<% end %>
</table>

<br />

<%= link_to 'New System Admin', new_systemadmin_path, :class => "btn" %>

